{
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "./src",
    "outDir": "dist",
    "lib": [
      "es2020",
      "dom"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**",
    "src/**/*.spec.ts",
    "src/test_utils"
  ],
  "compileOnSave": false,
  "ts-node": {
    "files": true
  }
}
